@model BeyondThemes.BeyondAdmin.Models.ShippingType

@{
    ViewBag.Title = "Create New Shipping Type";
    ViewBag.Description = "Shipping List";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<h2>Create New Shipping Type</h2>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Shipping Type Name</label>
            <div class="col-md-5">
                @Html.EditorFor(m => m.ShippingName, new { htmlAttributes = new {@class = "form-control" }})
                @Html.ValidationMessageFor(m=>m.ShippingName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Shipping Cost</label>
            <div class="col-md-5">
                @Html.EditorFor(m => m.ShippingCost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ShippingCost, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

